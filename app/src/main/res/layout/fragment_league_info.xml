<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.homeFrags.detailFragment.LeagueInfoFragment">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/league_logo_iv"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/league_logo_iv"
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/league_full_name_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/name_container"
        android:id="@+id/abbr_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abbreviation"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/league_abbr_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/abbr_container"
        android:id="@+id/type_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/league_type_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/type_container"
        android:id="@+id/subleague_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_sub_league"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/subleague_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/subleague_container"
        android:id="@+id/total_rounds_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_rounds"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/total_rounds_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/total_rounds_container"
        android:id="@+id/curr_round_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_round"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/curr_round_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/curr_round_container"
        android:id="@+id/curr_season_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_season"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/curr_season_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/curr_season_container"
        android:id="@+id/country_container"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rect"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/country_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/rules_heading_tv"
        app:layout_constraintTop_toBottomOf="@+id/country_container"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/rules_heading_tv"
        android:id="@+id/rules_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/rules_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/no_info_yet"
            android:textSize="12sp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
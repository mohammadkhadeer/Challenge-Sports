<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.homeFrags.detailFragment.AnalysisFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/head_to_head_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/head_to_head"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/head_to_head_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/head_to_head_rv"
        app:layout_constraintTop_toBottomOf="@+id/head_to_head_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/home_team_latest_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/home_team_recent_record"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/head_to_head_rv"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/home_team_latest_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_team_latest_rv"
        app:layout_constraintTop_toBottomOf="@+id/home_team_latest_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/away_team_latest_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/away_team_recent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/home_team_latest_rv"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/away_team_latest_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/away_team_latest_rv"
        app:layout_constraintTop_toBottomOf="@+id/away_team_latest_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/home_team_odds_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/home_odds"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/away_team_latest_rv"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/home_team_odds_list_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_team_odds_rv"
        app:layout_constraintTop_toBottomOf="@+id/home_team_odds_list_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/away_team_odds_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/away_odds"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/home_team_odds_rv"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/home_team_odds_rv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/away_team_odds_rv"
        app:layout_constraintTop_toBottomOf="@+id/away_team_odds_list_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>

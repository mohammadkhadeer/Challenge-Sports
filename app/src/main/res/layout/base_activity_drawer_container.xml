<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_7sdp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_back_bt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/_18sdp"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/top_heading_mainpage"/>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"/>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cancel_button_rl"
            android:layout_weight="20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_1sdp"
                android:padding="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_search_icon"
                    app:tint="@color/alt_black" />

<!--                <ImageView-->
<!--                    android:id="@+id/menu_icon"-->
<!--                    android:layout_width="@dimen/_20sdp"-->
<!--                    android:src="@drawable/ic_menu"-->
<!--                    android:layout_height="@dimen/_20sdp"-->
<!--                    app:tint="@color/white"-->
<!--                    android:layout_margin="@dimen/_2sdp"-->
<!--                    android:layout_marginEnd="@dimen/_16sdp"-->
<!--                    />-->

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/cross_icon"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_width="@dimen/_35sdp"
                android:visibility="gone"
                android:src="@drawable/ic_cross"
                android:padding="@dimen/_1sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                app:tint="@color/black"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_adapter_background"
            android:layout_margin="@dimen/_4sdp"
            android:id="@+id/edt_cont"
            android:visibility="gone"
            android:layout_weight="89">

            <EditText
                android:id="@+id/search_matches"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:textCursorDrawable="@drawable/c"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:paddingVertical="@dimen/_8sdp"
                android:background="@drawable/primary_rounded_rect"
                android:backgroundTint="@color/main_adapter_background_color"
                android:layout_height="wrap_content"
                android:hint="@string/search_here"/>

        </RelativeLayout>

    </LinearLayout>



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/baseViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tabLayoutMain"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/light_primary"
        app:tabIconTint="@color/tab_icon_tint"
        app:tabIndicatorFullWidth="false"
        android:paddingTop="@dimen/_1sdp"
        app:tabTextAppearance="@style/TabtextAppearence"
        app:tabIndicatorColor="@color/black"
        android:background="@color/black"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.material.tabs.TabLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/right_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.56"
        android:layout_height="@dimen/_35sdp">
        <TextView
            android:id="@+id/mp_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/match_played"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/w_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/win"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/draw"
            android:id="@+id/d_tv"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/l_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/loss"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/gf_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/gf"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/ga_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/ga"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/pts_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/pts"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/more_bt"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:src="@drawable/ic_up"
            android:padding="@dimen/_5sdp"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent"
            app:tint="#0085FF" />

    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/right_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_layout"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="@string/ranking"
            android:textSize="12sp"
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/rank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/rank_indicator"
                app:layout_constraintStart_toEndOf="@+id/rank_text"
                android:layout_width="0dp"
                android:src="@drawable/ic_up"
                android:padding="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:textColor="@color/grey_text"
            android:gravity="center"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_weight="60"
            android:text="@string/team_name"
            android:layout_height="match_parent">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/team_flag"
                app:layout_constraintWidth_percent="0.35"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/team_name"
                android:layout_width="0dp"
                app:layout_constraintStart_toEndOf="@+id/team_flag"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Liverpool fuoonac"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/more_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/right_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/_45sdp">
        <View
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_text"/>
        <TextView
            android:id="@+id/percent_stats"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:text="W%=0% /  L%=0% / AVA=0 D%=0% / AVF = 0 "
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/mid_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/percent_stats"
            android:background="@color/grey_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/grey_text"/>

        <TextView
            android:id="@+id/matches_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_6_matches"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/mid_divider" />

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/matches_text"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/mid_divider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/firstMatch"
                android:layout_width="0dp"
                android:paddingStart="@dimen/_2sdp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_loss"/>
            <ImageView
                android:id="@+id/secondMatch"
                android:layout_width="0dp"
                android:src="@drawable/ic_win"
                android:paddingStart="@dimen/_2sdp"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintStart_toEndOf="@+id/firstMatch"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/thirdMatch"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.16"
                android:src="@drawable/ic_draw"
                android:paddingStart="@dimen/_2sdp"
                app:layout_constraintStart_toEndOf="@+id/secondMatch"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/fourthMatch"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_tbd"
                app:layout_constraintWidth_percent="0.16"
                android:paddingStart="@dimen/_2sdp"
                app:layout_constraintStart_toEndOf="@+id/thirdMatch"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/fifthMatch"
                android:layout_width="0dp"
                android:src="@drawable/ic_win"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.16"
                android:paddingStart="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fourthMatch"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/sixthMatch"
                android:src="@drawable/ic_win"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/_2sdp"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintStart_toEndOf="@+id/fifthMatch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
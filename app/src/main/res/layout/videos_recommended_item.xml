<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_trending"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@color/colorPrimary"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_play_arrow_24"
        app:layout_constraintBottom_toBottomOf="@+id/background_trending"
        app:layout_constraintEnd_toEndOf="@+id/background_trending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headline_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="Here lies the poor bones of the king who never was he was  a king but not really bcz he was a sel"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/background_trending"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tag"
        app:layout_constraintTop_toBottomOf="@+id/headline_rv"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/background_trending"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorPrimary"
        android:text="8 Hours Ago"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>
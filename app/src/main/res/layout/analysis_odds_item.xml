<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/headings_odds_analysis"
        android:layout_width="match_parent"
        android:background="@color/alt_grey"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="@dimen/_3sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type_odd_tv"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="14sp"
            android:gravity="center"
            android:ellipsize="end"
            android:text="@string/total_full_time"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/round"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/win"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/draw"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/loss"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/percenty"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/over"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/under"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/headings_odds_analysis">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/round_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.275" />

        <TextView
            android:id="@+id/round_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/less_rounded_rect"
            android:backgroundTint="@color/app_blue"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:gravity="center"
            android:text="@string/round"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/w_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/w_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_2sdp"
            android:gravity="center"
            android:text="@string/win"
            android:textColor="@color/black"
            android:background="@drawable/less_rounded_rect"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/round_tv"
            app:layout_constraintEnd_toStartOf="@+id/d_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/round_tv"
            app:layout_constraintTop_toTopOf="@+id/round_tv" />

        <TextView
            android:id="@+id/d_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/less_rounded_rect"
            android:gravity="center"
            android:text="@string/draw"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/w_tv"
            app:layout_constraintEnd_toStartOf="@+id/l_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/w_tv"
            app:layout_constraintTop_toTopOf="@+id/w_tv" />

        <TextView
            android:id="@+id/l_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/loss"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/less_rounded_rect"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/d_tv"
            app:layout_constraintEnd_toStartOf="@+id/percent_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/d_tv"
            app:layout_constraintTop_toTopOf="@+id/d_tv" />

        <TextView
            android:id="@+id/percent_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/percenty"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/less_rounded_rect"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/l_tv"
            app:layout_constraintEnd_toStartOf="@+id/over_container"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/l_tv"
            app:layout_constraintTop_toTopOf="@+id/l_tv" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/over_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            app:layout_constraintWidth_percent="0.12"
            android:gravity="center"
            android:text="@string/over"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/percent_tv"
            app:layout_constraintEnd_toStartOf="@+id/under_container"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/percent_tv"
            app:layout_constraintTop_toTopOf="@+id/percent_tv" >

            <TextView
                android:id="@+id/over_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1/100%"
                android:textColor="@color/black"

                android:background="@drawable/less_rounded_rect"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/under_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.12"
            android:text="@string/under"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/over_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/over_container"
            app:layout_constraintTop_toTopOf="@+id/over_container" >
            <TextView
                android:id="@+id/under_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1/100%"
                android:textColor="@color/black"
                android:background="@drawable/less_rounded_rect"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>